{
    "manifest_version": 3,
    "name": "HelpMeOut",
    "version": "1.0",
    "description": "A simple Chrome Extension built with React.",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs"
    ],
    "background":{
        "service_worker": "background.js"
    },
    "host_permissions": [
        "http://*/",
        "https://*/*/"
    ],
    
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    },
    "icons": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  }